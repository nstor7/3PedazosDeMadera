@import "normalize.css"
chocolate = #5f3d1c
amarillo = #fbae17
body
    font-size 16px
header
    background chocolate
    height 50px
    padding: .5em 1em .5em 0
    img
        float right
nav
    background chocolate
    display inline-block
    font-size 1.5em
    position absolute
    top 55px
    left -190px
    height 278px
    width 180px
    border 1px solid #323232
    -webkit-transition .3s
    &.activo
        left 0
    & ul
        list-style none
        padding 0
        & li
            line-height 50px
            padding 0 0 0 10px
            border-bottom 1px inset amarillo
            & a
                color amarillo
                display block
                text-decoration none
    & .menu
        background amarillo
        box-shadow: 1px 1px 5px #121212
        font-size 0.8em
        height 25px
        width 110px
        position absolute
        top 0
        left 170px
        text-align center
        -webkit-transform: skewX(-20deg)
    
footer
    background chocolate
    height 50px
    margin 0
    padding 0