//Elementos de la plantilla
@import "normalize.css"
chocolate = #5f3d1c
amarillo = #fbae17
body
    background #eee
    font-size 16px
    padding 50px 48px 0 48px
.frame
    margin auto
    width 1080px
header
    display inline-block
    vertical-align top
    width 180px
    img
        margin-bottom 2em
    nav
        font-size 1em
        ul
            list-style none
            padding 0
            li
                line-height 40px
                padding 0 0 0 10px
                a
                    color chocolate
                    text-decoration none
