//Elementos del contenido
.imagenPrincipal
    display block
    margin 0
    position relative
    .title
        display inline-block
        position absolute
        top 430px
        h1
            background-color chocolate
            color amarillo
            display inline-block
            height 50px
            line-height 50px
            margin 0
            padding 0 1em
        h2
            background-color amarillo
            color chocolate
            margin 0
            padding 0 1em
.banda
    display block
    margin-top 5em
    .miembro
        box-sizing border-box
        display inline-block
        padding 0 1em
        vertical-align top
        width 24.5%
        h3
            text-align center
        img
            border-radius 50%
//vista de discos
.disco
    display block
    margin 1em
    .encabezado
        background chocolate
        color #e1e1e1
        display block
        height 40px
        line-height 40px
        padding 0 1em
        .titulo
            display inline-block
            margin 0
        .tipo
            display inline-block
            float right
            margin 0
    .detalle
        background chocolate
        color #e1e1e1
        display block
        padding 1em
        .canciones
            list-style none
            margin 0
            padding 0
            li
                margin-bottom 1em
                h3
                    display inline-block
                h4
                    display inline-block
                    float right
        .fecha
            color amarillo
            margin 0
            text-align right
    .creditos
        display block
        background amarillo
        border 1px solid chocolate
        color chocolate
        text-align center
        .musicos
            border-right 1px solid chocolate
            border-bottom 1px solid chocolate
            display inline-block
            margin 0
            padding 1em 0
            vertical-align center
            width 49%
        .tecnicos
            border-left 1px solid chocolate
            border-bottom 1px solid chocolate
            display inline-block
            margin 0
            padding 1em 0
            width 49%
            
            
            
    
            
        
