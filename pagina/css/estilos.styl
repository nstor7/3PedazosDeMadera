//Elementos de la plantilla
@import "normalize.css"
chocolate = #5f3d1c
amarillo = #fbae17
body
    background #eee
    font-size 16px
header
    background chocolate
    height 50px
    margin-bottom 2em
    padding: .5em 1em .5em 0
    img
        float right
nav
    background chocolate
    display inline-block
    font-size 1.5em
    position absolute
    top 55px
    left -190px
    height 278px
    width 180px
    border 1px solid #323232
    -webkit-transition .3s
    &.activo
        left 0
    ul
        list-style none
        padding 0
        li
            line-height 50px
            padding 0 0 0 10px
            border-bottom 1px inset #e1e1e1
            a
                color #e1e1e1
                display block
                text-decoration none
    .menu
        background amarillo
        box-shadow: 1px 1px 5px #121212
        font-size 0.8em
        height 25px
        width 110px
        position absolute
        top 0
        left 170px
        text-align center
        -webkit-transform: skewX(-20deg)
    
footer
    background chocolate
    height 50px
    margin 0
    padding 0
    
//Elementos del contenido
.disco
    display block
    margin 1em
    .encabezado
        background chocolate
        color #e1e1e1
        display block
        height 40px
        line-height 40px
        padding 0 1em
        .titulo
            display inline-block
            margin 0
        .tipo
            display inline-block
            float right
            margin 0
    .detalle
        background chocolate
        color #e1e1e1
        display block
        padding 1em
        .canciones
            list-style none
            margin 0
            padding 0
            li
                margin-bottom 1em
                h3
                    display inline-block
                h4
                    display inline-block
                    float right
        .fecha
            color amarillo
            margin 0
            text-align right
    .creditos
        display block
        background amarillo
        border 1px solid chocolate
        color chocolate
        text-align center
        .musicos
            border-right 1px solid chocolate
            border-bottom 1px solid chocolate
            display inline-block
            margin 0
            padding 1em 0
            vertical-align center
            width 49%
        .tecnicos
            border-left 1px solid chocolate
            border-bottom 1px solid chocolate
            display inline-block
            margin 0
            padding 1em 0
            width 49%
            
            
            
    
            
        
